<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="recipientRepo" class="repository.impl.RecipientRepoImpl">
        <constructor-arg name="dbURL" value="jdbc:h2:~/mail" />
        <constructor-arg name="userName" value="sa" />
        <constructor-arg name="password" value="11" />
    </bean>
    <bean id="mailService" class="service.impl.MailServiceImpl">
        <constructor-arg name="host" value="smtp.mailtrap.io" />
        <constructor-arg name="port" value="25" />
        <constructor-arg name="userName" value="ebcd5f882fae5c" />
        <constructor-arg name="password" value="ad9c4a07d860aa" />
    </bean>
    <bean id="recipientService" class="service.impl.RecipientServiceImpl">
        <constructor-arg ref="recipientRepo" />
        <constructor-arg ref="mailService" />
    </bean>
</beans>